<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/workCButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="182dp"
        android:layout_height="130dp"
        android:background="@drawable/work_button"
        android:backgroundTint="@color/Cambridge"
        android:fontFamily="@font/audiowide"
        android:gravity="clip_horizontal|center|center_vertical"
        android:paddingStart="0dp"
        android:text="@string/workCButton1"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@color/Indigo"
        android:textSize="45sp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:ignore="RtlSymmetry,TextSizeCheck" />


    <Button
        android:id="@+id/homeCButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="182dp"
        android:layout_height="130dp"
        android:background="@drawable/home_c_button"
        android:backgroundTint="@color/Indigo"
        android:fontFamily="@font/audiowide"
        android:paddingEnd="0dp"
        android:text="@string/homeCButton1"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@color/Cambridge"
        android:textSize="45sp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:ignore="RtlSymmetry,TextSizeCheck" />

    <Button
        android:id="@+id/backFromCategories"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:background="@drawable/back_from_categories"
        android:outlineProvider="none"
        android:backgroundTint="@color/Indigo"
        android:rotation="90"
        android:text="@string/nothing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/audiowide"
        android:text="@string/extraBackText"
        android:textColor="@color/Indigo"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />
</androidx.constraintlayout.widget.ConstraintLayout>