<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/JDGreen">

    <ImageView
        android:id="@+id/pin_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="32dp"
        android:src="@drawable/pin"
        app:tint="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pin_icon"
        android:id="@+id/pin_screen_title"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Your Pin"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pin_screen_title"
        android:id="@+id/pin_screen_form"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pin_name_edit_text"
            android:maxLength="15"
            android:hint="What is the name of this pin?"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:backgroundTint="@color/white"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/pin_screen_form"
        android:id="@+id/create_pin_btn"
        android:text="Create Pin"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:foregroundTint="@color/JDYellow"
        android:backgroundTint="@color/JDYellow" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/cancel_pin_btn"
        android:layout_below="@id/create_pin_btn"
        android:text="Cancel"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:foregroundTint="@color/JDRed"
        android:backgroundTint="@color/JDRed"/>



</RelativeLayout>